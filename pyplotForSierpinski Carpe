import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import  Axes3D
import numpy as np
import sierpinskiCarpet as sc

fig = plt.figure()
ax = Axes3D(fig)
ax.set_xlabel('y')
ax.set_ylabel('x')
ax.set_title('Sierpinski Carpet')
sc = sc.sCn_plus_one
num = int(len(sc.vertices))

x = []
y = []
f = []
flat = []
for i in range(num):
    x.append(sc.vertices[i].position[1])
    y.append(sc.vertices[i].position[0])
    f.append(sc.vertices[i].harmonicValue)
    flat.append(-1.0)

ax.scatter(x, y, f)
plt.show()
plt.savefig("SierpinskiCarpetfig1.png")
